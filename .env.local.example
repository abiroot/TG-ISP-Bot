# ==============================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env.local and fill in your values
# Docker Compose will automatically use these settings

# Database Configuration (Docker Compose - DO NOT CHANGE)
POSTGRES_DB_HOST=postgres
POSTGRES_DB_USER=isp_user
POSTGRES_DB_NAME=isp_dev
POSTGRES_DB_PASSWORD=isp_dev_password
POSTGRES_DB_PORT=5432

# Server Configuration
PORT=3009
NODE_ENV=development

# ==============================================
# REQUIRED: Add your credentials below
# ==============================================

# Telegram Configuration
TELEGRAM_BOT_TOKEN=

# OpenAI Configuration (Get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
# RAG (Retrieval Augmented Generation) Configuration
# ==============================================

# Enable/Disable RAG feature
RAG_ENABLED=true

# Number of similar conversation chunks to retrieve (1-10)
RAG_TOP_K_RESULTS=3

# Number of messages per embedding chunk (3-20)
RAG_CHUNK_SIZE=10

# Number of overlapping messages between chunks (0-10)
RAG_CHUNK_OVERLAP=2

# Minimum similarity threshold for retrieval (0.0-1.0)
RAG_MIN_SIMILARITY=0.5

# OpenAI embedding model to use
RAG_EMBEDDING_MODEL=text-embedding-3-small

# ==============================================
# RAG Background Worker Configuration
# ==============================================

# Enable/Disable background embedding worker
RAG_WORKER_ENABLED=true

# Worker run interval in milliseconds (minimum 60000 = 1 minute)
RAG_WORKER_INTERVAL_MS=60000

# Number of contexts to process per worker cycle (1-20)
RAG_EMBEDDING_BATCH_SIZE=5

# Trigger embedding after this many new messages (minimum 1)
RAG_MESSAGES_THRESHOLD=3

# ==============================================
# ISP Tool Calling Configuration
# ==============================================

# Enable/Disable ISP tools (customer support via AI tool calling)
ISP_ENABLED=true

# ISP API Configuration
ISP_API_BASE_URL=https://your-isp-management-system.com/api
ISP_API_USERNAME=your_isp_api_username
ISP_API_PASSWORD=your_isp_api_password
