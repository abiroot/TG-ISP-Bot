# Database Configuration
POSTGRES_DB_HOST=localhost
POSTGRES_DB_USER=your_db_user
POSTGRES_DB_NAME=isp_support_bot
POSTGRES_DB_PASSWORD=your_db_password
POSTGRES_DB_PORT=5432

# Server Configuration
PORT=3010
NODE_ENV=development

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# OpenAI Configuration (used for intent classification)
OPENAI_API_KEY=your_openai_api_key

# Google AI Configuration (used for LLM - Gemini 2.0 Flash)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key

# ============================================
# ISP API Configuration
# ============================================

# ISP API Base URL
ISP_API_BASE_URL=https://your-isp-api.com
ISP_API_USERNAME=your_api_username
ISP_API_PASSWORD=your_api_password

# Enable/Disable ISP tools (customer lookup, account status, technical support via AI tool calling)
ISP_ENABLED=true

# ============================================
# Billing API Configuration
# ============================================

# Billing System Base URL
BILLING_API_BASE_URL=https://billing.libancomlb.com
BILLING_USERNAME=your_billing_username
BILLING_PASSWORD=your_billing_password

# Enable/Disable Billing features (task creation, cookie-based authentication)
BILLING_ENABLED=true

# ============================================
# Message Sending API Configuration
# ============================================

# API Key for /api/send-message endpoint
# Used by external systems (e.g., UltraMsg, billing webhooks) to send messages via Telegram bot
# Generate a secure random key: openssl rand -hex 32
API_KEY=your_secure_random_api_key_here