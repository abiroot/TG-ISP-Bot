# Database Configuration
POSTGRES_DB_HOST=localhost
POSTGRES_DB_USER=your_db_user
POSTGRES_DB_NAME=isp_support_bot
POSTGRES_DB_PASSWORD=your_db_password
POSTGRES_DB_PORT=5432

# Server Configuration
PORT=3008
NODE_ENV=development

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# OpenAI Configuration (used for embeddings)
OPENAI_API_KEY=your_openai_api_key

# Google AI Configuration (used for LLM - Gemini 2.5 Flash-Lite)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key


# ============================================
# RAG (Retrieval Augmented Generation) Configuration
# ============================================

# Enable/Disable RAG feature
RAG_ENABLED=true

# Number of similar conversation chunks to retrieve (1-10)
RAG_TOP_K_RESULTS=3

# Number of messages per embedding chunk (3-20)
RAG_CHUNK_SIZE=10

# Number of overlapping messages between chunks (0-10)
RAG_CHUNK_OVERLAP=2

# Minimum similarity threshold for retrieval (0.0-1.0)
RAG_MIN_SIMILARITY=0.5

# OpenAI embedding model to use
RAG_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# RAG Background Worker Configuration
# ============================================

# Enable/Disable background embedding worker
RAG_WORKER_ENABLED=true

# Worker run interval in milliseconds (minimum 60000 = 1 minute)
# Recommended: 60000 (1 minute) for fast context building
# Alternative: 300000 (5 minutes) for lower API usage
RAG_WORKER_INTERVAL_MS=60000

# Number of contexts to process per worker cycle (1-20)
RAG_EMBEDDING_BATCH_SIZE=5

# Trigger embedding after this many new messages (minimum 1)
# Recommended: 3-5 for quick embedding, 10+ for less frequent processing
RAG_MESSAGES_THRESHOLD=3

# ============================================
# ISP API Configuration
# ============================================

# ISP API Base URL
ISP_API_BASE_URL=https://your-isp-api.com
ISP_API_USERNAME=your_api_username
ISP_API_PASSWORD=your_api_password

# Enable/Disable ISP tools (customer lookup, account status, technical support via AI tool calling)
ISP_ENABLED=true
